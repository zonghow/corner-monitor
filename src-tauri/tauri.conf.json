{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "Corner Monitor",
  "version": "0.0.1",
  "identifier": "io.github.zonghow.corner-monitor",
  "build": {
    "beforeDevCommand": "pnpm dev",
    "devUrl": "http://localhost:1420",
    "beforeBuildCommand": "pnpm build",
    "frontendDist": "../dist"
  },
  "app": {
    "windows": [
      {
        "title": "Corner Monitor",
        "width": 1,
        "height": 1,
        "resizable": false,
        "decorations": false,
        "transparent": true,
        "shadow": true,
        "acceptFirstMouse": true
      }
    ],
    "macOSPrivateApi": true,
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ]
  }
}
